{
  "name": "@arnaud-barre/downwind",
  "description": "A bundler-first & PostCSS-independent implementation of Tailwind",
  "private": true,
  "type": "module",
  "version": "0.8.0",
  "author": "Arnaud Barr√© (https://github.com/ArnaudBarre)",
  "license": "MIT",
  "scripts": {
    "postinstall": "cd playground/vite && bun install",
    "dev": "scripts/bundle.ts --dev",
    "build": "scripts/bundle.ts",
    "tsc": "tsl && tsl -p playground/vite/tsconfig.json",
    "test": "tests/run-tests.ts --update-snapshots",
    "test-ci": "tests/run-tests.ts",
    "lint": "eslint --max-warnings 0",
    "prettier": "bun run prettier-ci --write",
    "prettier-ci": "prettier --cache --check '**/*.{cjs,ts,tsx,html,css,json,md,yml}'",
    "ci": "bun run build && bun tsc && bun test-ci && bun lint && bun prettier-ci"
  },
  "prettier": {
    "quoteProps": "consistent",
    "experimentalOperatorPosition": "start",
    "plugins": [
      "@arnaud-barre/prettier-plugin-sort-imports"
    ]
  },
  "dependencies": {
    "@arnaud-barre/config-loader": "^0.7.6"
  },
  "peerDependencies": {
    "vite": "^6.3 || ^7"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    }
  },
  "devDependencies": {
    "@arnaud-barre/eslint-config": "^6.1.2",
    "@arnaud-barre/prettier-plugin-sort-imports": "^0.2.3",
    "@arnaud-barre/tsl-config": "^0.1.1",
    "@types/node": "^22.12.7",
    "eslint": "^9.36.0",
    "lightningcss": "^1.30.1",
    "prettier": "^3.6.2",
    "tsl": "^1.0.25",
    "typescript": "~5.9.2",
    "vite": "npm:rolldown-vite@latest"
  }
}
